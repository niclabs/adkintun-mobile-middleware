<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adkintunsensorlibrary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="cl.niclabs.adkmobile.monitor.Connectivity"></service>
        <service android:name="cl.niclabs.adkmobile.monitor.Telephony">
        </service>
        <service android:name="cl.niclabs.adkmobile.monitor.Traffic"></service>
        <receiver android:name="cl.niclabs.adkmobile.monitor.PhoneStatus$AutoStart">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>
        <service android:name="cl.niclabs.adkmobile.monitor.Screen"></service>
    </application>

</manifest>
